# Lock
"i3lock -e -f -c 000000"
    Mod4 + Escape

# Lock + Sleep
"i3lock -e -f -c 000000 && sudo pm-suspend"
    Shift+Mod4 + Escape

# Volume
"pa-volume-ctl.sh down"
    XF86AudioLowerVolume

"pa-volume-ctl.sh up"
    XF86AudioRaiseVolume

"pa-volume-ctl.sh mute"
    XF86AudioMute

# MPD
"mpc toggle"
    XF86AudioPlay

"mpc stop"
    XF86AudioStop

"mpc prev"
    XF86AudioPrev

"mpc next"
    XF86AudioNext


# workaround for old i3: https://github.com/i3/i3/issues/1429
"i3 workspace prev_on_output"
    b:8

"i3 workspace next_on_output"
    b:9

# workaround for a laptop without pgup
"xdotool key Page_Up"
    Shift + Prior

# workaround for a laptop without pgdown
"xdotool key Page_Down"
    Shift + Next
