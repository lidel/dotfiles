# (I like xbindkeys because it is DE/WM- agnostic)
#
# vim: ts=4 et sw=4

# terminal
"urxvtc-wrapper.sh"
     Alt + Alt_L
"urxvtc-wrapper.sh"
     Alt + grave

# volume
"pa-volume-ctl.sh down"
    XF86AudioLowerVolume
"pa-volume-ctl.sh up"
    XF86AudioRaiseVolume

# file manager
"thunar"
    Mod4 + f

# raise psi
"xtrlock & /home/lidel/cl/bin/vaio-s2ram.sh"
    XF86AudioMedia

# simple screen locker
"sh -c 'mpc disable 2;sleep 1;xset dpms force off;xtrlock;mpc enable 2'"
    XF86Launch1
"/home/lidel/bin/scrot"
    Mod4 + Print

# backlight
"vaio-backlight.sh up"
    XF86MonBrightnessUp
"vaio-backlight.sh down"
    XF86MonBrightnessDown

# mpd
"mpc prev"
    XF86AudioPrev
"mpc toggle"
    XF86AudioPlay
"mpc stop"
    XF86AudioStop
"mpc next"
    XF86AudioNext

