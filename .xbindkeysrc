# (I like xbindkeys because it is DE/WM- agnostic)
#
# vim: ts=4 et sw=4

# terminal
"urxvtc-wrapper.sh"
     Alt + grave

# file manager
"thunar"
    Mod4 + f

# scrot with auto-optipng
"/home/lidel/bin/scrot"
    Mod4 + Print
#
# simple screen lock
"mpc disable 2 & mpc stop & xscreensaver-command -lock ; mpc enable 2"
    XF86Sleep

# suspend 2 ram
"xtrlock & mpc stop & /home/lidel/cl/bin/vaio-s2ram.sh"
    Mod4 + XF86Sleep

# volume
"pa-volume-ctl.sh down"
    XF86AudioLowerVolume
"pa-volume-ctl.sh up"
    XF86AudioRaiseVolume

# mpd
"mpc prev"
    XF86AudioPrev
"mpc toggle"
    XF86AudioPlay
"mpc stop"
    XF86AudioStop
"mpc next"
    XF86AudioNext

# Notebook keyboard
# =================
#

# simple screen lock
"mpc disable 2 & mpc stop & xscreensaver-command -lock ; mpc enable 2"
    XF86Launch1

# notebook backlight
"sudo /home/lidel/bin/vaio-fw21e-backlight2.sh up"
    XF86MonBrightnessUp
"sudo /home/lidel/bin/vaio-fw21e-backlight2.sh down"
    XF86MonBrightnessDown

