Config { font = "-*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*"
       , bgColor = "#000"
       , fgColor = "#999"
       , position = TopW L 100
       , lowerOnStart = True
       , commands = [ Run MultiCpu ["-t", "<total><fc=#666>%</fc>", "-L", "25", "-H", "75", "-n", "#ac9", "-h", "#ca9"] 10
                    , Run CpuFreq ["-t", "<cpu0>", "-L", "0", "-l", "lightblue"] 100
                    , Run CoreTemp ["-t", "<core0><fc=#666>°</fc>", "-L", "40", "-H", "60", "-n", "#ac9", "-h", "#ca9"] 100
                    , Run Memory ["-t", "<usedratio><fc=#666>%</fc>", "-L", "50", "-H", "75", "-n", "#ac9", "-h", "#ca9", "-l", "#888"] 20
                    , Run Network "wlan0" ["-t", "<rx><fc=#666>KiB</fc><fc=#444>/</fc><tx><fc=#666>KiB</fc>", "-L", "10", "-H", "100", "--normal", "#ac9", "--high", "#ca9"] 10
                    , Run Date "%H<fc=#666>:</fc>%M<fc=#666>:%S</fc>" "date" 10
                    , Run PipeReader ".vol" "volume"
                    , Run Com "cut -d' ' -f 1-3 /proc/loadavg" [] "load" 50
                    , Run MPD ["-t", "<composer> <artist> <fc=#666>–</fc> <title> <fc=#666>[</fc><statei><fc=#666>] <bar></fc> <lapsed><fc=#666>/<length></fc>", "--", "-P", "<fc=#ac9>♫</fc>", "-Z", "<fc=#ca9>#</fc>", "-S", " "] 5
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %mpd% <fc=#555>:</fc> %volume%<fc=#555>♫ :</fc> %wlan0% <fc=#555>:</fc> %memory% <fc=#555>:</fc> %cpufreq% <fc=#555>@</fc> %multicpu% <fc=#555>@</fc> %coretemp% <fc=#555>:</fc> %load% <fc=#555>:</fc> %date%               "
       }
