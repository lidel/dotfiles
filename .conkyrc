# vim: ts=4 et sw=4

alignment               bottom_right
background              yes
cpu_avg_samples         2
default_color           black
default_outline_color   grey36
default_shade_color     white
draw_borders            no
draw_graph_borders      no
draw_outline            yes
draw_shades             no
use_xft                 no
#xftfont                 Envy Code R:size=10
font                    -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-*
gap_x                   0
gap_y                   -8
minimum_size            1910 8
net_avg_samples         3
no_buffers              yes
double_buffer           yes
out_to_console          no
out_to_stderr           no
extra_newline           no
own_window              no
stippled_borders        0
update_interval         1.0
uppercase               no
use_spacer              left
show_graph_scale        no
show_graph_range        no

TEXT

$alignr${color #222222}$diskio 
$alignr${color #202048}${upspeed wlan0} 
$alignr${color #482020}${downspeed wlan0} 

${diskiograph 32,520 222222 404040}${upspeedgraph wlan0 32,600 222222 303068}${downspeedgraph wlan0 32,800 222222 683030}
