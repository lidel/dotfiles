# vim: ts=4 et sw=4

Xcursor.theme:      Neutral_Plus
! xft
Xft.dpi:            96
Xft.antialias:      true
Xft.autohint:       false
Xft.hinting:        true
Xft.hintstyle:      hintfull
Xft.lcdfilter:      lcddefault
Xft.rgba:           rgb


! urxvt is my terminal of choice (http://goo.gl/reh0)
urxvt*perl-ext-common:  selection-autotransform,matcher

urxvt*foreground:   #dCdCdC
urxvt*cursorColor:  #c0c0c0
urxvt*background:   #1C1C1C

#XTerm*boldColors:   true
#XTerm*colorBDMode:  true
#XTerm*colorULMode:  true

! font
urxvt*font:        xft:Envy Code R:size=10
#urxvt*font:        xft:Anonymous Pro:size=10
#URxvt*font:        xft:Bitstream Vera Sans Mono:pixelsize=11
#URxvt*font:        xft:Inconsolata:pixelsize=10
#Urxvt*font:        xft:Monospace:pixelsize=13:antialias=true:hinting=true
#URxvt*boldFont:    xft:Monospace:pixelsize=13:antialias=true:bold:hinting=true
#urxvt*font:        -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-*
#urxvt*boldFont:    -*-terminus-bold-r-*-*-14-*-*-*-*-*-iso10646-*
#urxvt*font:        -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
#urxvt*boldFont:    -*-terminus-bold-r-*-*-12-*-*-*-*-*-iso10646-*
#urxv*font: -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
#URxvt*font: xft:Bitstream Vera Sans Mono:pixelsize=12

! cycle font sizes with ctrl+alt+1-6
URxvt.keysym.C-1: command:\033]710;xft:Envy Code R:size=10\007
URxvt.keysym.C-2: command:\033]710;xft:Envy Code R:size=12\007
URxvt.keysym.C-3: command:\033]710;xft:Envy Code R:size=14\007
URxvt.keysym.C-4: command:\033]710;xft:Envy Code R:size=20\007
URxvt.keysym.C-5: command:\033]710;xft:Envy Code R:size=26\007
URxvt.keysym.C-6: command:\033]710;xft:Envy Code R:size=36\007

! transparency policy
urxvt.inheritPixmap:    true
urxvt.shading:          10 !trans, 0=opaque
urxvt.fading:           20 !term unfocus

! other
urxvt*saveLines:        2535
urxvt*cursorBlink:      true
urxvt*internalBorder:   3
urxvt*urlLauncher:      browser-wrapper.sh
urxvt*url-launcher:     browser-wrapper.sh
urxvt*cutchars:         `"()'*<>[]{|}
urxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
urxvt*matcher.button:   1
#urxvt*termName:         rxvt
URxvt*termName: screen-256color
!
urxvt.urgentOnBell:     true
urxvt*scrollBar:        false
urxvt.scrollTtyOutput:  false
urxvt*titeInhibit:      true
urxvt.imLocale:	        pl_PL.utf8
urxvt.scrollTtyKeypress: false
xterm*utf8:             1

! Tango color theme
#urxvt*color0:  rgb:2e2e/3434/3636
urxvt*color1:  rgb:cccc/0000/0000
urxvt*color2:  rgb:4e4e/9a9a/0606
urxvt*color3:  rgb:c4c4/a0a0/0000
urxvt*color4:  rgb:3434/6565/a4a4
urxvt*color5:  rgb:7575/5050/7b7b
urxvt*color6:  rgb:0606/9820/9a9a
urxvt*color7:  rgb:d3d3/d7d7/cfcf
urxvt*color8:  rgb:5555/5757/5353
urxvt*color9:  rgb:efef/2929/2929
urxvt*color10: rgb:8a8a/e2e2/3434
urxvt*color11: rgb:fcfc/e9e9/4f4f
urxvt*color12: rgb:7272/9f9f/cfcf
urxvt*color13: rgb:adad/7f7f/a8a8
urxvt*color14: rgb:3434/e2e2/e2e2
urxvt*color15: rgb:eeee/eeee/ecec
urxvt*highlightColor:#404040

! xscreensaver ---------------------------------------------------------------
! https://wiki.archlinux.org/index.php/Xdefaults#XScreenSaver_resources

!font settings
xscreensaver.Dialog.headingFont:        -*-terminus-bold-r-*-*-14-*-*-*-*-*-iso10646-*
xscreensaver.Dialog.bodyFont:           -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
xscreensaver.Dialog.labelFont:          -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
xscreensaver.Dialog.unameFont:          -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
xscreensaver.Dialog.buttonFont:         -*-terminus-bold-r-*-*-12-*-*-*-*-*-iso10646-*
xscreensaver.Dialog.dateFont:           -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-*
xscreensaver.passwd.passwdFont:         -*-terminus-bold-r-*-*-12-*-*-*-*-*-iso10646-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #666666
xscreensaver.Dialog.background:         #000000
xscreensaver.Dialog.topShadowColor:     #111111
xscreensaver.Dialog.bottomShadowColor:  #111111
xscreensaver.Dialog.Button.foreground:  #666666
xscreensaver.Dialog.Button.background:  #111111
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #888888
xscreensaver.Dialog.text.background:    #111111
xscreensaver.Dialog.internalBorderWidth:10
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    1
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #666666
xscreensaver.passwd.thermometer.background:  #111111
xscreensaver.passwd.thermometer.width:       12
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %Y-%m-%d %H:%M:%S
!xscreensaver.Dialog.logo.width:         1
!xscreensaver.Dialog.logo.height:        1

